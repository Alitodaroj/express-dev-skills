<form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
  <input type="text" name="skill" value="<%= skill.skill%>"><br>
  <label>
    <input type="checkbox" name="done" <%= skill.done ? 'checked' : ''%>>
    Completed
  </label><br>
  <button type="submit">Edit To-Do</button>
</form>

